# http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
trailing_comma = true
insert_final_newline = true

[*.rb]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[config.ru]
indent_style = space
indent_size = 2

[Gemfile]
indent_style = space
indent_size = 2

[Rakefile]
indent_style = space
indent_size = 2

[bin/console]
indent_style = space
indent_size = 2
